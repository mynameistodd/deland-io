---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Section from "../components/Section.astro";
---

<Layout title="Work | Deland.io">
    <Header />

    <main class="flex-1">
        <Section class="pt-20 pb-16">
            <h1 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">
                Selected <span class="text-neon-orange">Work</span>.
            </h1>
            <p
                class="text-xl md:text-2xl opacity-80 leading-relaxed max-w-2xl mb-12"
            >
                A collection of projects I've worked on.
            </p>

            <div class="grid gap-8 md:grid-cols-2">
                <!-- Project 1 -->
                <div
                    class="p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-neon-orange transition-colors group"
                >
                    <h3
                        class="text-2xl font-bold mb-2 group-hover:text-neon-orange transition-colors"
                    >
                        Project One
                    </h3>
                    <p class="opacity-60 mb-4">
                        A cool project using Astro and React.
                    </p>
                    <div class="flex gap-2">
                        <span
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800"
                            >Astro</span
                        >
                        <span
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800"
                            >React</span
                        >
                    </div>
                </div>

                <!-- Project 2 -->
                <div
                    class="p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-neon-orange transition-colors group"
                >
                    <h3
                        class="text-2xl font-bold mb-2 group-hover:text-neon-orange transition-colors"
                    >
                        Project Two
                    </h3>
                    <p class="opacity-60 mb-4">
                        Something else built with Tailwind.
                    </p>
                    <div class="flex gap-2">
                        <span
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800"
                            >Tailwind</span
                        >
                        <span
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800"
                            >TypeScript</span
                        >
                    </div>
                </div>

                <!-- Project 3 -->
                <div
                    class="p-6 rounded-lg border border-gray-200 dark:border-gray-800 hover:border-neon-orange transition-colors group"
                >
                    <h3
                        class="text-2xl font-bold mb-2 group-hover:text-neon-orange transition-colors"
                    >
                        Project Three
                    </h3>
                    <p class="opacity-60 mb-4">
                        An experimental design system.
                    </p>
                    <div class="flex gap-2">
                        <span
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800"
                            >Design Systems</span
                        >
                        <span
                            class="px-3 py-1 text-xs rounded-full bg-gray-100 dark:bg-gray-800"
                            >Figma</span
                        >
                    </div>
                </div>
            </div>
        </Section>
    </main>

    <Footer />
</Layout>
